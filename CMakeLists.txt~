cmake_minimum_required(VERSION 2.8.3)
project(optical_process)

add_executable(optical_process src/RealOpticalFlow.cpp)

find_package(catkin REQUIRED COMPONENTS
  roscpp
  std_msgs
  
)

catkin_package(
  INCLUDE_DIRS include
  CATKIN_DEPENDS roscpp std_msgs
  DEPENDS system_lib
)

include_directories(
  ${catkin_INCLUDE_DIRS}
)

add_library(optical_process
  src/trackFeatures.cpp
)


target_link_libraries(optical_process ${catkin_LIBRARIES})
find_package(OpenCV REQUIRED)
target_link_libraries(optical_process 
  klt_feature_tracker
  ${OpenCV_LIBS}
)



